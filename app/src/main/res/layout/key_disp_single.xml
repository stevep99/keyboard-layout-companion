<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/keyButtonImage"
        android:layout_width="@dimen/key_size_disp"
        android:layout_height="@dimen/key_size_disp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@drawable/key_b"/>

    <ImageView
        android:id="@+id/keyGraphicImage"
        android:layout_width="@dimen/key_size_disp"
        android:layout_height="@dimen/key_size_disp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/keyMainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:shadowColor="@android:color/white"
        android:shadowRadius="@integer/key_text_shadow_size_disp"
        android:textColor="@color/keyTextMainColor"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="@dimen/key_text_size_disp_single"
        tools:text="A"/>

</androidx.constraintlayout.widget.ConstraintLayout>